<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/navbar.css">
</head>

<body>
   <%- include('../includes/navbar.ejs') %>

    <main>
        
    
        <form class="login-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <h2>User Registration</h2>
            </div>

            <!-- error message-->
            <% if(errorMessage) { %>
                <div class='user-message user-message--error'>
                    <%= errorMessage %>
                </div>
            <% } %>
            <!-- -->
            <div class="form-control">
                <label for="name">Name</label>
                <input class="<%= validationErrors.find(el => el.param === 'name') ? 'invalid' : '' %>"
                    type="text" 
                    name="name" 
                    id="name" 
                    value="<%= oldInput.name %>"
                    required>
            </div>
            <div class="form-control">
                <label for="email">Email</label>
                <input class="<%= validationErrors.find(el => el.param === 'email') ? 'invalid' : '' %>"
                    type="text" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>"
                    required>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(el => el.param === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    value="<%= oldInput.password %>"
                    required>
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input class="<%= validationErrors.find(el => el.param === 'confirmPassword') ? 'invalid' : '' %>"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= oldInput.confirmPassword %>"
                    required>
            </div>
            <div class="form-control">
                <!-- csrf -->
                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                <!-- -->
                <button class="form-btn" type="submit">  
                    Signup
                </button>
            </div>
        </form>
    </main>
<%- include('../includes/foot.ejs') %></body>